map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    access_log  off;

    listen       ${NGINX_PORT};
    server_name  domain1.com www.domain1.com;
    

    location / {
      proxy_pass http://react:5173;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection $connection_upgrade;
    }

    location = /prisma {
    return 302 /prisma/;
    }

    location /prisma/ { 
      proxy_pass http://nest:5555/; # note the trailing slash here, it matters!
    }

    location = /api {
      return 302 /api/;
    }

    location /api/ {
        proxy_pass http://nest:3000/;  # note the trailing slash here, it matters!
    }

    # source for the trailing / and this weird redirection thing 
    # https://copyprogramming.com/howto/how-to-remove-the-path-with-an-nginx-proxy-pass
}